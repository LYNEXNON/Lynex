<script>
    const langData = {
        tr: { close: "KAPAT X", news: "üì∞ HABERLER", signed: "‚úçÔ∏è ƒ∞MZALI FORMA", home: "üè† ANA MAƒûAZA", cart: "SEPET", your_prey: "AVINIZ", total: "TOPLAM: ", pay_btn: "√ñDEMEYE PEN√áE AT", collection_title: "2026 ZIRH KOLEKSƒ∞YONU", home_kit: "ƒ∞√á SAHA", away_kit: "DEPLASMAN", gk_kit: "KALECƒ∞", alt_kit: "ALTERNATƒ∞F", notify: "PEN√áELER ATILDI! ü¶Ö", back: "‚Üê GERƒ∞ D√ñN", add_cart: "SEPETE PEN√áE AT", checkout_title: "üí≥ √ñDEME MERKEZƒ∞", confirm_pay: "Sƒ∞PARƒ∞≈ûƒ∞ PEN√áELE" },
        en: { close: "CLOSE X", news: "üì∞ NEWS", signed: "‚úçÔ∏è SIGNED KITS", home: "üè† MAIN STORE", cart: "CART", your_prey: "YOUR PREY", total: "TOTAL: ", pay_btn: "CLAW TO PAY", collection_title: "2026 ARMOR COLLECTION", home_kit: "HOME KIT", away_kit: "AWAY KIT", gk_kit: "GK KIT", alt_kit: "ALT KIT", notify: "CLAWS OUT! ü¶Ö", back: "‚Üê BACK", add_cart: "ADD TO CLAWS", checkout_title: "üí≥ CHECKOUT", confirm_pay: "CLAW ORDER" },
        fr: { close: "FERMER X", news: "üì∞ NOUVELLES", signed: "‚úçÔ∏è MAILLOTS SIGN√âS", home: "üè† MAGASIN", cart: "PANIER", your_prey: "VOTRE PROIE", total: "TOTAL: ", pay_btn: "GRIFFE POUR PAYER", collection_title: "COLLECTION 2026", home_kit: "DOMICILE", away_kit: "EXT√âRIEUR", gk_kit: "GARDIEN", alt_kit: "ALT", notify: "GRIFFES SORTIES! ü¶Ö", back: "‚Üê RETOUR", add_cart: "AJOUTER AU PANIER", checkout_title: "üí≥ PAIEMENT", confirm_pay: "COMMANDER" }
    };

    let currentLang = 'tr';
    let cart = [];
    let currentItem = {};
    let activePrice = 0;

    // √ñZEL PEN√áE ALERT FONKSƒ∞YONU
    function clawAlert(title, msg) {
        document.getElementById('claw-title').innerText = title;
        document.getElementById('claw-msg').innerText = msg;
        document.getElementById('claw-alert-overlay').style.display = 'flex';
    }

    function closeClawAlert() {
        document.getElementById('claw-alert-overlay').style.display = 'none';
    }

    function setLang(lang) {
        currentLang = lang;
        document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
        document.getElementById('btn-' + lang).classList.add('active');
        document.querySelectorAll('[data-key]').forEach(el => { el.innerText = langData[lang][el.getAttribute('data-key')]; });
    }

    function toggleMenu() { document.getElementById('side-menu').classList.toggle('open'); }
    function toggleCart() { document.getElementById('cart-panel').classList.toggle('open'); }
    function showPage(id) { document.querySelectorAll('.page').forEach(p => p.classList.remove('active')); document.getElementById(id).classList.add('active'); }

    function openDetail(name, price, img) {
        currentItem = { name, price, img };
        activePrice = price;
        document.getElementById('promo-code').value = "";
        document.getElementById('d-name').innerText = name;
        document.getElementById('d-price').innerText = price + " TL";
        document.getElementById('det-img-cont').innerHTML = `<img src="${img}" style="width:100%; object-fit:contain;">`;
        showPage('detailPage');
    }

    function applyPromo() {
        const code = document.getElementById('promo-code').value.trim();
        if(code === "LYNEX") {
            activePrice = 2000;
            document.getElementById('d-price').innerText = "2.000 TL";
            clawAlert("AV KODU KABUL EDƒ∞LDƒ∞!", "PEN√áELER DEVREDE: Fƒ∞YAT 2.000 TL'YE ƒ∞NDƒ∞Rƒ∞LDƒ∞! ü¶Ö");
        } else {
            clawAlert("GE√áERSƒ∞Z KOD!", "AV KA√áTI! DOƒûRU KODU Gƒ∞RDƒ∞ƒûƒ∞NDEN EMƒ∞N OL.");
        }
    }

    function addToCart() {
        cart.push({name: currentItem.name, price: activePrice, id: Date.now()});
        updateCartUI();
        const n = document.getElementById("notification");
        n.className = "show"; setTimeout(() => { n.className = ""; }, 3000);
    }

    function updateCartUI() {
        document.getElementById('cart-count').innerText = cart.length;
        const list = document.getElementById('cart-items-list');
        let total = cart.reduce((s, i) => s + i.price, 0);
        list.innerHTML = cart.length === 0 ? '<p>...</p>' : "";
        cart.forEach(item => {
            list.innerHTML += `<div style="display:flex; justify-content:space-between; padding:10px 0; border-bottom:1px solid #222;"><span>${item.name}</span> <b>${item.price} TL</b></div>`;
        });
        document.getElementById('total-price').innerText = total.toLocaleString();
    }

    function startCheckout() {
        if(cart.length === 0) {
            clawAlert("BO≈û SEPET!", "AVLANACAK Bƒ∞R ≈ûEY YOK. √ñNCE SEPETƒ∞ DOLDUR!");
            return;
        }
        let total = cart.reduce((s, i) => s + i.price, 0);
        document.getElementById('checkout-total').innerText = total.toLocaleString();
        toggleCart(); showPage('checkoutPage');
    }

    function completeOrder() { 
        clawAlert("Sƒ∞PARƒ∞≈û TAMAMLANDI!", "AV BA≈ûARIYLA GER√áEKLE≈ûTƒ∞. LYNEXNON FC Aƒ∞LESƒ∞NE HO≈û GELDƒ∞N! ü¶Å"); 
        cart = []; updateCartUI(); showPage('storePage'); 
    }

    function clearCart() { 
        clawAlert("SEPET TEMƒ∞ZLENDƒ∞!", "T√úM AVLAR SERBEST BIRAKILDI."); 
        cart = []; updateCartUI(); 
    }
</script>
